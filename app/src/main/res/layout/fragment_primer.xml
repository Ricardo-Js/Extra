<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".BlankFragment" android:id="@+id/frameLayout"
                                                   android:background="#045964">
    <TextView
            android:text="+"
            android:layout_width="29dp"
            android:layout_height="65dp"
            android:id="@+id/textView2"
            android:layout_marginStart="20dp" android:textSize="50sp"
            app:layout_constraintStart_toEndOf="@+id/etUno" android:layout_marginTop="72dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3" android:textColor="#FFFFFF"/>
    <TextView
            android:text="SUMAR"
            android:layout_width="129dp"
            android:layout_height="78dp"
            android:id="@+id/textView3" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="68dp"
            android:textSize="36sp"
            android:textColor="#F2F8FC" android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
            android:layout_width="140dp"
            android:layout_height="75dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etDos"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:textSize="30sp" android:textColor="#FFFFFF"
            app:layout_constraintStart_toEndOf="@+id/textView2"
            android:layout_marginStart="24dp" app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="72dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3"/>
    <EditText
            android:layout_width="140dp"
            android:layout_height="75dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etUno"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="28dp"
            android:textSize="30sp" android:textColor="#FFFFFF"
            android:layout_marginTop="72dp" app:layout_constraintTop_toBottomOf="@+id/textView3"/>
    <Button
            android:text="RESULTADO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button"
            android:background="#015E53" android:textColor="#FFFFFF"
            android:layout_marginTop="56dp" app:layout_constraintTop_toBottomOf="@+id/textView2"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:layout_width="250dp"
            android:layout_height="89dp"
            android:id="@+id/txtResultado" android:background="#039BE5" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/button"
            app:layout_constraintHorizontal_bias="0.486" app:layout_constraintVertical_bias="0.155"
            android:textSize="60dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>