<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="381dp"
            android:layout_height="570dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:id="@+id/container" android:background="#C00101"
            app:layout_constraintHorizontal_bias="0.428" android:layout_marginBottom="25dp"
            app:layout_constraintBottom_toBottomOf="parent">
    </LinearLayout>
    <Button
            android:text="SUMAR"
            android:layout_width="121dp"
            android:layout_height="64dp"
            android:id="@+id/btn1"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="4dp"
            android:textColor="#FFFFFF" android:background="#7E0101"
            android:textSize="18sp" app:layout_constraintTop_toBottomOf="@+id/textView"/>
    <Button
            android:text="DIVIDIR"
            android:layout_width="122dp"
            android:layout_height="64dp"
            android:id="@+id/btn3"
            android:layout_marginStart="10dp" app:layout_constraintStart_toEndOf="@+id/btn2"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="9dp"
            android:background="#7E0101" android:textColor="#FFFFFF"
            android:textSize="18sp" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/textView"/>
    <Button
            android:text="MULTIPLICAR"
            android:layout_width="120dp"
            android:layout_height="64dp"
            android:id="@+id/btn2"
            android:layout_marginStart="10dp" app:layout_constraintStart_toEndOf="@+id/btn1"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="612dp"
            android:background="#7E0101" android:textColor="#FFFFFF" android:textSize="18sp"
            android:layout_marginTop="6dp" app:layout_constraintTop_toBottomOf="@+id/textView"/>
    <TextView
            android:text="CALCULADORA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="12dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="152dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="200dp" android:textSize="36sp" app:layout_constraintHorizontal_bias="0.443"/>
</androidx.constraintlayout.widget.ConstraintLayout>