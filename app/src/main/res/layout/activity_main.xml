<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="#00ACC1">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="387dp"
            android:layout_height="590dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:id="@+id/container" android:background="#03535E"
            app:layout_constraintHorizontal_bias="0.428" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent">
    </LinearLayout>
    <Button
            android:text="SUMAR"
            android:layout_width="70dp"
            android:layout_height="45dp"
            android:id="@+id/btn1"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="48dp"
            android:textColor="#FFFFFF" android:background="#023D44"
            android:textSize="18sp" app:layout_constraintTop_toBottomOf="@+id/textView"
            android:layout_marginTop="12dp"/>
    <Button
            android:text="DIVIDIR"
            android:layout_width="70dp"
            android:layout_height="45dp"
            android:id="@+id/btn3"
            android:layout_marginStart="12dp" app:layout_constraintStart_toEndOf="@+id/btn2"
            android:background="#023D44" android:textColor="#FFFFFF"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginTop="12dp"/>
    <Button
            android:text="RESTAR"
            android:layout_width="70dp"
            android:layout_height="45dp"
            android:id="@+id/btn"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="9dp"
            android:background="#023D44" android:textColor="#FFFFFF"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginTop="12dp"
            app:layout_constraintStart_toEndOf="@+id/btn3" android:layout_marginStart="12dp"
            app:layout_constraintHorizontal_bias="0.045"/>
    <Button
            android:text="MULTIPLICAR"
            android:layout_width="70dp"
            android:layout_height="45dp"
            android:id="@+id/btn2"
            android:layout_marginStart="12dp" app:layout_constraintStart_toEndOf="@+id/btn1"
            android:background="#023D44" android:textColor="#FFFFFF" android:textSize="10sp"
            android:layout_marginTop="12dp" app:layout_constraintTop_toBottomOf="@+id/textView"
    />
    <TextView
            android:text="CALCULADORA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="152dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="200dp" android:textSize="36sp" app:layout_constraintHorizontal_bias="0.53"
            android:textColor="#024952" android:textStyle="bold"/>
    <TextView
            android:text="MINIMALIST"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView"/>
    <TextView
            android:text="BY RICKY"
            android:layout_width="67dp"
            android:layout_height="20dp"
            android:id="@+id/textView5" app:layout_constraintStart_toEndOf="@+id/textView"
            app:layout_constraintTop_toBottomOf="@+id/textView4"
    />
</androidx.constraintlayout.widget.ConstraintLayout>